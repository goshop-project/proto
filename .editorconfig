# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{yaml,proto}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
